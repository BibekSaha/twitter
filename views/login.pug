extends layouts/login-layout.pug
block content
  .loginContainer
    h1 Login
    if errorMessage
      p #{errorMessage}
    form(method="post")
      input(type="text", name="logUsername", value=logUsername placeholder="Username or email", required="")
      input(type="password", name="logPassword", value=logPassword placeholder="Password", required="")
      input(type="submit", value="Login")
    a(href="/register") Need an account? Register here